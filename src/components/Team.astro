---
import { Image } from "astro:assets";
const { team } = Astro.props;
---

<article>
    <div class="grid grid-cols-4 p-3.5 rounded-4xl
                bg-[#AB81CD]">
        <div class="content-center pr-5">
            <a href={`/experience/${team.slug}`}>
                <Image
                    src={team.data.image}
                    width={100}
                    height={100 / 2}
                    alt={team.data.title}
                    class="rounded-2xl mb-4 aspect-thumbnail object-cover"
                />
            </a>
        </div>
        <div class="col-span-3">
            <a
                href={`/experience/${team.slug}`}
                class="text-2xl text-zinc-900 font-semibold inline-block"
            >
                <h2>{team.data.title}</h2>
            </a>
            <p class="text-[#25283D] text-xl line-clamp-2">
                {team.body}
            </p>
        </div>
    </div>
</article>