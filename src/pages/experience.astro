---
import Main from '../components/Main.astro';
import H1 from '../components/H1.astro';
import Layout from '../layouts/Layout.astro';

import TechnicalList from '../components/TechnicalList.astro';
import { getCollection } from 'astro:content';

const technicals = await getCollection("technicals")
---

<!doctype html>
<html lang="en">
    <Layout title="Experience">
        <Main>
            <H1 text="Technical Experience"/>

            {technicals.map(technical => (
                <TechnicalList technicals={technicals}/>
            ))}
        </Main>
        
        
        <body>

            <h1>Experience</h1>
            <h2>Technical Experience </h2>

            <p>This page will include work experience</p>
            <ul>
                <li>Polytechnique</li>
                <li>Robert Bosch GmbH</li>
                <li>Inteligent Systems Lab, Memorial University</li>
            </ul>

            <h2>Student Design Teams</h2>
            <ul>
                <li>Sidus</li>
                <li>Paradigm</li>
                <li>Chem-E-Car</li>
            </ul>

            
        </body>
        
    </Layout>
</html>